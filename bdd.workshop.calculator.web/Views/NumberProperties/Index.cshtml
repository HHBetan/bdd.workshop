@model bdd.workshop.calculator.web.Models.Number

@{

    ViewBag.Title = "Calculate!";
}

<h2>Insert number to get properties</h2>
@using (Html.BeginForm("Properties", "NumberProperties"))
{
    <fieldset>
        <legend>Get Number properties</legend>
        <div class="editor-field m-2">
            Number: @Html.TextBoxFor(model => model.TheNumber)
        </div>
    </fieldset>
        <input  class="m-2  btn btn-primary" type="submit" value="See properties" />
}