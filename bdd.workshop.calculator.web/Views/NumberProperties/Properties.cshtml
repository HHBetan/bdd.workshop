@{
    <table class="table-bordered text-center">
        <thead>
            <tr>
                <th class="p-2" scope="col">Info about Number</th>
                <th class="p-2" scope="col">Prime Number</th>
                <th class="p-2" scope="col">Not a Prime Number</th>
                <th class="p-2" scope="col">Undefined</th>
            </tr>
        </thead>
        <tbody>
            <tr>
               <td class="p-2" id="theNumber">@ViewData["Number"]</td>
               <td class="p-2" id="isPrimeNumber">@ViewData["IsPrimeNumber"]</td>
               <td class="p-2" id="IsNotPrimeNumber">@ViewData["IsNotPrimeNumber"]</td>
               <td class="p-2"id="IsUndefined">@ViewData["IsUndefined"]</td>
        </tbody>
    </table>
}